!IFDEF ZLIB_DIR
ZLIB_DLL = $(ZLIB_DIR)\zlib.dll
ZLIB_LIB = $(ZLIB_DIR)/lib/zlib.lib
ZLIB_INC = $(ZLIB_DIR)/include
LIBS     = $(LIBS) "$(ZLIB_LIB)"
cflags   = $(cflags) /D HAVE_ZLIB /D HAVE_ZLIB_H /I"$(ZLIB_INC)"
!ENDIF
